	</body>
</html>

<script>
	document.addEventListener("DOMContentLoaded", function() {
		const button = document.getElementById('soundButton');
		
		if (button) {
			const audio = new Audio('/fixspeaker.mp3');

			button.addEventListener('click', function() {
				if (audio.paused) {
					audio.play();
					button.textContent = "Pausar Sonido ðŸ’¨ðŸ’¦";
				} else {
					audio.pause();
					button.textContent = "Activar Sonido ðŸ’¨ðŸ’¦";
				}
			});
		} else {
			console.error('Button with ID "soundButton" not found.');
		}
	});
</script>
